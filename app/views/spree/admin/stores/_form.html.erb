<div data-hook="admin_store_form_fields">
  <div class="alpha four columns">
    <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:store_name) %><br />
      <%= f.text_field :name, :class => 'fullwidth' %>
      <%= error_message_on :store, :name %>
    <% end %>
  </div>

  <div class="four columns">
    <%= f.field_container :code do %>
      <%= f.label :code, Spree.t(:store_code) %><br />
      <%= f.text_field :code, :class => 'fullwidth' %>
      <%= error_message_on :store, :code %>
    <% end %>
  </div>

  <div class="two columns">
    <%= f.field_container :default do %>
      <%= f.label :default, Spree.t(:default) %>
      <ul>
        <li><%= f.radio_button :default, "true", :class => 'fullwidth' %> <%= Spree.t(:yes) %></li>
        <li><%= f.radio_button :default, "false", :class => 'fullwidth' %> <%= Spree.t(:no) %></li>
      </ul>
      <%= error_message_on :store, :default %>
    <% end %>
  </div>

  <div class="alpha four columns">
    <%= f.field_container :mail_from_address do %>
      <%= f.label :mail_from_address, Spree.t(:send_mails_as) %><br />
      <%= f.text_field :mail_from_address, :class => 'fullwidth' %>
      <%= error_message_on :store, :mail_from_address %>
    <% end %>
  </div>

  <div class="four columns">
    <%= f.field_container :default_currency do %>
      <%= f.label :stock_location_id, Spree.t(:take_stock_from) %>
      <%= f.collection_select(:stock_location_id, Spree::StockLocation.all, :id, :name ) %>
      <%= error_message_on :store, :stock_location_id %>
    <% end %>
  </div>

  <div class="two columns">
    <%= f.field_container :default_currency do %>
      <%= f.label :default_currency, Spree.t(:currency) %>
      <%= f.text_field :default_currency %>
    <% end %>
  </div>

  <div class="alpha six columns">
    <%= f.field_container :url do %>
      <%= f.label :url, Spree.t(:domains) %><br />
      <%= f.text_area :url, :cols => 60, :class => 'fullwidth' %>
      <%= error_message_on :store, :url %>
    <% end %>
  </div>

  <div class="alpha six columns">
    <%= f.field_container :cards_accepted do %>
      <%= f.label :cards_accepted, Spree.t(:cards_accepted) %><br />
      <%= f.text_area :cards_accepted, :cols => 60, :class => 'fullwidth' %>
      <%= error_message_on :store, :cards_accepted %>
    <% end %>
  </div>

  <div class="alpha three columns">
    <%= f.field_container :delivery_carrier_default do %>
      <%= f.label :delivery_carrier_default, Spree.t(:delivery_carrier) %>
      <%= f.text_field :delivery_carrier_default %>
    <% end %>
  </div>

  <div class="three columns">
    <%= f.field_container :delivery_estimate_default do %>
      <%= f.label :delivery_estimate_default, Spree.t(:delivery_estimate) %>
      <%= f.text_field :delivery_estimate_default %>
    <% end %>
  </div>

  <div class="three columns">
    <%= f.field_container :delivery_free do %>
      <%= f.label :delivery_free, Spree.t(:free_delivery) %>
      <ul>
        <li><%= f.radio_button :delivery_free, "true", :class => 'fullwidth' %> <%= Spree.t(:yes) %></li>
        <li><%= f.radio_button :delivery_free, "false", :class => 'fullwidth' %> <%= Spree.t(:no) %></li>
      </ul>
      <%= error_message_on :store, :delivery_free %>
    <% end %>
  </div>

  <div class="alpha three columns">
    <%= f.field_container :returns_free do %>
      <%= f.label :returns_free, Spree.t(:returns_free) %>
      <ul>
        <li><%= f.radio_button :returns_free, "true", :class => 'fullwidth' %> <%= Spree.t(:yes) %></li>
        <li><%= f.radio_button :returns_free, "false", :class => 'fullwidth' %> <%= Spree.t(:no) %></li>
      </ul>
      <%= error_message_on :store, :returns_free %>
    <% end %>
  </div>


  <div class='row'>
    <div class="alpha six columns">
      <%= f.field_container :payment_methods do %>
        <%= f.label :payment_methods, Spree.t(:payment_methods) %><br />
        <% @payment_methods.each do |payment_method| %>
          <label class="sub">
            <%= check_box_tag 'store[payment_method_ids][]', payment_method.id, @store.payment_methods.include?(payment_method) %>
          </label> &nbsp;
          <%= "#{payment_method.name} (#{payment_method.environment})" %>
          <br>
        <% end %>
        <%= hidden_field_tag 'store[payment_method_ids][]', '' %>
      <% end %>
    </div>

    <div class="omega six columns">
      <%= f.field_container :shipping_methods do %>
        <%= f.label :shipping_methods, Spree.t(:shipping_methods) %><br />
        <% @shipping_methods.each do |shipping_method| %>
          <label class="sub">
            <%= check_box_tag 'store[shipping_method_ids][]', shipping_method.id, @store.shipping_methods.include?(shipping_method) %>
          </label> &nbsp;
          <%= shipping_method.name %>
          <br>
        <% end %>
        <%= hidden_field_tag 'store[shipping_method_ids][]', '' %>
      <% end %>
    </div>
  </div>
</div>
